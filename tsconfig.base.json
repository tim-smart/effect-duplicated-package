{
  "compilerOptions": {
    "downlevelIteration": true,
    "strict": true,
    "strictNullChecks": true,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    "exactOptionalPropertyTypes": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "isolatedModules": true,

    "allowJs": true,
    "checkJs": true,

    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "lib": ["es2023"],
    "module": "NodeNext",
    "target": "es2022",
    "moduleResolution": "NodeNext",
    "moduleDetection": "force",
    "resolveJsonModule": true,

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "pretty": true,
    "preserveWatchOutput": true,

    "incremental": true,
    "composite": true,

    "tsBuildInfoFile": "${configDir}/tsconfig.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@amosbastian/api": ["./packages/api/src/index.ts"],
      "@amosbastian/api/*": ["./packages/api/src/*"],
      "@amosbastian/database": ["./packages/database/src/index.ts"],
      "@amosbastian/database/*": ["./packages/database/src/*"],
      "@amosbastian/user": ["./packages/user/src/index.ts"],
      "@amosbastian/user/*": ["./packages/user/src/*"]
    }
  },
  "include": ["${configDir}/src/**/*"]
}
